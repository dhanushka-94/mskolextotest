# MSK Computers - Production Environment Configuration
# Copy this to .env on your aaaPanel server

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="MSK Computers"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_ON_SERVER
APP_DEBUG=false
APP_URL=https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION (Main Database)
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=msk_computers
DB_USERNAME=msk_user
DB_PASSWORD=your_database_password

# =============================================================================
# PRODUCTS DATABASE CONFIGURATION (Separate Database)
# =============================================================================
PRODUCTS_DB_HOST=localhost
PRODUCTS_DB_PORT=3306
PRODUCTS_DB_DATABASE=msk_computers_products
PRODUCTS_DB_USERNAME=msk_user
PRODUCTS_DB_PASSWORD=your_database_password

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# WebXPay Configuration
WEBXPAY_MODE=live
WEBXPAY_MERCHANT_ID=your_merchant_id
WEBXPAY_API_KEY=your_api_key
WEBXPAY_SECRET_KEY=your_secret_key
WEBXPAY_GATEWAY_URL=https://payment.webxpay.com/
WEBXPAY_RETURN_URL=https://yourdomain.com/payment/webxpay/return
WEBXPAY_CANCEL_URL=https://yourdomain.com/payment/webxpay/cancel
WEBXPAY_NOTIFY_URL=https://yourdomain.com/payment/webxpay/notify

# KokoPay Configuration (LIVE)
KOKOPAY_MODE=live
KOKOPAY_MERCHANT_ID=MSK001
KOKOPAY_API_KEY=your_live_api_key
KOKOPAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
your_private_key_content_here
-----END PRIVATE KEY-----"
KOKOPAY_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
your_public_key_content_here
-----END PUBLIC KEY-----"
KOKOPAY_GATEWAY_URL=https://api.kokopay.lk
KOKOPAY_RETURN_URL=https://yourdomain.com/payment/kokopay/return
KOKOPAY_CANCEL_URL=https://yourdomain.com/payment/kokopay/cancel
KOKOPAY_NOTIFY_URL=https://yourdomain.com/payment/kokopay/notify

# =============================================================================
# FILE STORAGE
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# LOGGING
# =============================================================================
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================
APP_TIMEZONE=Asia/Colombo
DEBUGBAR_ENABLED=false

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
COMPANY_PHONE="+94 11 295 9005"
COMPANY_ADDRESS="123 Galle Road, Colombo 03, Sri Lanka"
